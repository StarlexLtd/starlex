{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "newLine": "LF",
        "useDefineForClassFields": false,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "decorators"],
        "paths": {
            "starlex/core": ["packages/core/src"]
        }
    },
    "include": [
        "packages/global.d.ts",
        "packages/**/*.d.ts",
        "packages/**/*.js",
        "packages/**/*.ts",
        "test-dts"
    ],
    "exclude": [
        "dist"
    ]
}
