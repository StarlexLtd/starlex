{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "newLine": "LF",
        "useDefineForClassFields": false,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "decorators"],
        "paths": {
            "@cyysummer/core": ["packages/core/src"]
        },
        "typeRoots": [
            "node_modules/@types",
            "./packages/**/types",
        ],
    },
    "include": [
        "./packages/global.d.ts",
    ],
    "exclude": [
        "./dist",
        "./packages/**/dist",
    ],
}
